<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.imber.bmi_calc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launchertegridy"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launchertegridy_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BMICalc">
        <activity
            android:name="com.imber.bmi_calc.Settings"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.BMICalc.NoActionBar"></activity>
        <activity
            android:name="com.imber.bmi_calc.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.BMICalc.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>